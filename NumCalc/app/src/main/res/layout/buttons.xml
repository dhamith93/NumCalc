<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="6"
    android:columnCount="5">

    <Button
        android:id="@+id/btn_bks"
        style="@style/SettingsButtons"
        android:layout_row="0"
        android:layout_column="4"
        android:text="DEL" />

    <Button
        android:id="@+id/btn_ms"
        style="@style/SettingsButtons"
        android:layout_row="1"
        android:layout_column="4"
        android:text="MS" />

    <Button
        android:id="@+id/btn_mc"
        style="@style/SettingsButtons"
        android:layout_row="2"
        android:layout_column="4"
        android:text="MC" />

    <Button
        android:id="@+id/btn_mr"
        style="@style/SettingsButtons"
        android:layout_row="3"
        android:layout_column="4"
        android:text="MR" />

    <Button
        android:id="@+id/btn_m_add"
        style="@style/SettingsButtons"
        android:layout_row="5"
        android:layout_column="4"
        android:text="M+" />

    <Button
        android:id="@+id/btn_m_sub"
        style="@style/SettingsButtons"
        android:layout_row="4"
        android:layout_column="4"
        android:text="M-" />

    <Button
        android:id="@+id/btn_type"
        style="@style/SettingsButtons"
        android:layout_row="0"
        android:layout_column="3"
        android:text="HEX" />

    <Button
        android:id="@+id/btn_div"
        style="@style/OpsButtons"
        android:layout_row="1"
        android:layout_column="3"
        android:text="÷" />

    <Button
        android:id="@+id/btn_mult"
        style="@style/OpsButtons"
        android:layout_row="2"
        android:layout_column="3"
        android:text="×" />

    <Button
        android:id="@+id/btn_sub"
        style="@style/OpsButtons"
        android:layout_row="3"
        android:layout_column="3"
        android:text="‒" />

    <Button
        android:id="@+id/btn_add"
        style="@style/OpsButtons"
        android:layout_row="4"
        android:layout_column="3"
        android:text="+" />

    <Button
        android:id="@+id/btn_eq"
        style="@style/OpsButtons"
        android:layout_row="5"
        android:layout_column="3"
        android:text="=" />

    <Button
        android:id="@+id/btn_d"
        style="@style/NumberButtons"
        android:layout_row="0"
        android:layout_column="0"
        android:tag="number_button"
        android:text="D" />

    <Button
        android:id="@+id/btn_e"
        style="@style/NumberButtons"
        android:layout_row="0"
        android:layout_column="1"
        android:tag="number_button"
        android:text="E" />

    <Button
        android:id="@+id/btn_f"
        style="@style/NumberButtons"
        android:layout_row="0"
        android:layout_column="2"
        android:tag="number_button"
        android:text="F" />

    <Button
        android:id="@+id/btn_a"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="0"
        android:tag="number_button"
        android:text="A" />

    <Button
        android:id="@+id/btn_b"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="1"
        android:tag="number_button"
        android:text="B" />

    <Button
        android:id="@+id/btn_c"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="2"
        android:tag="number_button"
        android:text="C" />

    <Button
        android:id="@+id/btn_7"
        style="@style/NumberButtons"
        android:layout_row="2"
        android:layout_column="0"
        android:tag="number_button"
        android:text="7" />

    <Button
        android:id="@+id/btn_8"
        style="@style/NumberButtons"
        android:layout_row="2"
        android:layout_column="1"
        android:tag="number_button"
        android:text="8" />

    <Button
        android:id="@+id/btn_9"
        style="@style/NumberButtons"
        android:layout_row="2"
        android:layout_column="2"
        android:tag="number_button"
        android:text="9" />

    <Button
        android:id="@+id/btn_4"
        style="@style/NumberButtons"
        android:layout_row="3"
        android:layout_column="0"
        android:tag="number_button"
        android:text="4" />

    <Button
        android:id="@+id/btn_5"
        style="@style/NumberButtons"
        android:layout_row="3"
        android:layout_column="1"
        android:tag="number_button"
        android:text="5" />

    <Button
        android:id="@+id/btn_6"
        style="@style/NumberButtons"
        android:layout_row="3"
        android:layout_column="2"
        android:tag="number_button"
        android:text="6" />

    <Button
        android:id="@+id/btn_1"
        style="@style/NumberButtons"
        android:layout_row="4"
        android:layout_column="0"
        android:tag="number_button"
        android:text="1" />

    <Button
        android:id="@+id/btn_2"
        style="@style/NumberButtons"
        android:layout_row="4"
        android:layout_column="1"
        android:tag="number_button"
        android:text="2" />

    <Button
        android:id="@+id/btn_3"
        style="@style/NumberButtons"
        android:layout_row="4"
        android:layout_column="2"
        android:tag="number_button"
        android:text="3" />

    <Button
        android:id="@+id/btn_0"
        style="@style/NumberButtons"
        android:layout_row="5"
        android:layout_column="1"
        android:tag="number_button"
        android:text="0" />
</GridLayout>